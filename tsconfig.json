{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es5",
    "jsx": "react",
    "declarationDir": "lib",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "sjcl-all": ["types/sjcl-all"]
    },
    "types": ["./types", "node"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
